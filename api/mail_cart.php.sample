$items = $data['items'] ?? [];
if (empty($items)) bad("Sepet boÅŸ.");

$rows = "";
$total = 0;
foreach ($items as $it) {
    $sku = htmlspecialchars($it['sku'] ?? '', ENT_QUOTES, 'UTF-8');
    $name = htmlspecialchars($it['name'] ?? '', ENT_QUOTES, 'UTF-8');
